{
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2022", "dom"],
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [".", "**/*.spec.ts", "**/*.test.ts", "../playwright.config.ts", "../playwright.config.*.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
