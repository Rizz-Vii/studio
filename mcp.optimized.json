{
    "inputs": [
        {
            "id": "firecrawl_api_key",
            "type": "promptString",
            "description": "Firecrawl API Key (get from https://www.firecrawl.dev/app/api-keys)",
            "password": true
        },
        {
            "id": "stripe_api_key",
            "type": "promptString",
            "description": "Stripe API Key (https://dashboard.stripe.com/apikeys)",
            "password": true
        },
        {
            "id": "sentry_auth_token",
            "type": "promptString",
            "description": "Sentry Auth Token (get from Sentry project settings)",
            "password": true
        },
        {
            "id": "huggingface_token",
            "type": "promptString",
            "description": "HuggingFace Token (get from https://huggingface.co/settings/tokens)",
            "password": true
        }
    ],
    "servers": {
        "firecrawl": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "firecrawl-mcp@latest"
            ],
            "env": {
                "FIRECRAWL_API_KEY": "${input:firecrawl_api_key}"
            },
            "gallery": true,
            "description": "Essential: Web scraping and content intelligence"
        },
        "github": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github@latest"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${env:GITHUB_TOKEN}"
            },
            "gallery": true,
            "description": "Essential: Repository management and automation"
        },
        "sentry": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sentry@latest"
            ],
            "env": {
                "SENTRY_AUTH_TOKEN": "${env:SENTRY_AUTH_TOKEN}",
                "SENTRY_ORG": "abbas-ali-a1",
                "SENTRY_PROJECT": "rankpilot-production",
                "SENTRY_CLIENT_ID": "${env:SENTRY_CLIENT_ID}",
                "SENTRY_CLIENT_SECRET": "${env:SENTRY_CLIENT_SECRET}"
            },
            "gallery": true,
            "description": "Essential: Error monitoring and performance tracking"
        },
        "mcp_stripe": {
            "headers": {
                "Authorization": "Bearer ${env:STRIPE_SECRET_KEY}"
            },
            "description": "Essential: Stripe payment processing and subscription management"
        },
        "sequentialthinking": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking@latest"
            ],
            "gallery": true,
            "description": "Development: Complex problem analysis and reasoning"
        },
        "markitdown": {
            "type": "stdio",
            "command": "uvx",
            "args": [
                "markitdown-mcp"
            ],
            "gallery": true,
            "description": "Development: Document processing and conversion"
        },
        "filesystem": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem@latest",
                "/workspaces/studio"
            ],
            "gallery": true,
            "description": "Development: File operations and workspace management"
        },
        "huggingface": {
            "type": "http",
            "url": "https://huggingface.co/mcp",
            "headers": {
                "Authorization": "Bearer ${input:huggingface_token}"
            },
            "gallery": true,
            "description": "Optional: AI model search and integration (load on demand)"
        }
    },
    "optional_servers": {
        "playwright": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "@playwright/mcp@latest"
            ],
            "gallery": true,
            "description": "Optional: Browser automation (enable when needed)"
        },
        "zapier": {
            "type": "http",
            "url": "https://mcp.zapier.com/api/mcp/s/MDc5NzRhODktZmZhNy00YjA5LThhMTctMzlmZTY4NTM3NzI1OjdjNWY2MjVmLWFiN2YtNDdhNC1hMTY0LTY2ZWFiMzYwZjc2MA==/mcp",
            "gallery": true,
            "description": "Optional: Workflow automation (enable when needed)"
        },
        "brave-search": {
            "type": "stdio",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-brave-search@latest"
            ],
            "env": {
                "BRAVE_API_KEY": "${env:BRAVE_API_KEY}"
            },
            "gallery": true,
            "description": "Optional: Web search capabilities (enable when needed)"
        }
    }
}