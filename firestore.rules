rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access to prevent unintentional data exposure.
    match /{document=**} {
      allow read, write: if false;
    }

    // --- User Profiles ---
    // Users can read their own profile.
    // Admins can read any user's profile for management purposes.
    // Users can only create their own profile upon registration.
    // Users can only update their own profile.
    match /users/{userId} {
      allow read: if request.auth.uid == userId
                  || (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      // Note: Deleting users should be handled by a Cloud Function for clean-up.
      allow delete: if false;
    }

    // --- User Activities ---
    // Users can create, read, and delete their own activity logs.
    // This allows users to see their dashboard and for the app to generate insights.
    match /users/{userId}/activities/{activityId} {
      allow read, create, delete: if request.auth.uid == userId;
      // Updates are disallowed to maintain the integrity of the activity log.
      allow update: if false;
    }
  }
}
