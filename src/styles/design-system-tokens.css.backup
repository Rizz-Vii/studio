/**
 * Design System Enhancement - Semantic Color Tokens & Dynamic Spacing
 * Extends the existing design system with component-specific tokens and adaptive spacing
 */

@tailwind components;

@layer components {
  /* Status Badge Variants */
  .badge-success {
    @apply bg-success/10 text-success border-success/20;
  }

  .badge-warning {
    @apply bg-warning/10 text-warning border-warning/20;
  }

  .badge-error {
    @apply bg-destructive/10 text-destructive border-destructive/20;
  }

  .badge-info {
    @apply bg-primary/10 text-primary border-primary/20;
  }

  /* Admin Status Indicators */
  .status-admin {
    @apply bg-destructive/10 text-destructive border-destructive/20;
  }

  .status-agency {
    @apply bg-primary/10 text-primary border-primary/20;
  }

  .status-user {
    @apply bg-muted text-muted-foreground border-border;
  }

  /* System Health Indicators */
  .health-critical {
    @apply bg-destructive/10 text-destructive border-destructive/20;
  }

  .health-warning {
    @apply bg-warning/10 text-warning border-warning/20;
  }

  .health-good {
    @apply bg-success/10 text-success border-success/20;
  }

  /* Achievement Badges */
  .achievement-gold {
    @apply bg-warning/10 text-warning border-warning/20;
  }

  .achievement-silver {
    @apply bg-muted text-muted-foreground border-border;
  }

  .achievement-bronze {
    @apply bg-accent/10 text-accent border-accent/20;
  }

  /* Payment Status Indicators */
  .payment-success {
    @apply bg-success/10 text-success border-success/20;
  }

  .payment-pending {
    @apply bg-warning/10 text-warning border-warning/20;
  }

  .payment-failed {
    @apply bg-destructive/10 text-destructive border-destructive/20;
  }

  /* Responsive Typography Utilities */
  .text-responsive-xs {
    @apply text-xs sm:text-sm;
  }

  .text-responsive-sm {
    @apply text-sm sm:text-base;
  }

  .text-responsive-base {
    @apply text-base sm:text-lg;
  }

  .text-responsive-lg {
    @apply text-lg sm:text-xl;
  }

  .text-responsive-xl {
    @apply text-xl sm:text-2xl;
  }

  /* Enhanced Mobile Touch Targets */
  .mobile-button {
    @apply min-h-[48px] min-w-[48px] flex items-center justify-center;
  }

  .mobile-touch-target {
    @apply min-h-[44px] min-w-[44px];
  }

  /* Dynamic Layout Components */
  .adaptive-container {
    @apply mx-auto px-4 sm:px-6 lg:px-8;
    @apply max-w-sm sm:max-w-md md:max-w-lg lg:max-w-xl xl:max-w-2xl 2xl:max-w-4xl;
  }

  .adaptive-container-wide {
    @apply mx-auto px-4 sm:px-6 lg:px-8;
    @apply max-w-md sm:max-w-lg md:max-w-2xl lg:max-w-4xl xl:max-w-6xl 2xl:max-w-7xl;
  }

  .adaptive-container-full {
    @apply mx-auto px-4 sm:px-6 lg:px-8 max-w-full;
  }

  /* Responsive Card Components */
  .adaptive-card {
    @apply bg-card text-card-foreground border rounded-lg shadow-sm;
    @apply p-3 sm:p-4 md:p-6 lg:p-8;
  }

  .adaptive-card-compact {
    @apply bg-card text-card-foreground border rounded-lg shadow-sm;
    @apply p-2 sm:p-3 md:p-4;
  }

  .adaptive-card-spacious {
    @apply bg-card text-card-foreground border rounded-lg shadow-sm;
    @apply p-6 sm:p-8 md:p-10 lg:p-12;
  }

  /* Responsive Grid Layouts */
  .adaptive-grid {
    @apply grid gap-3 sm:gap-4 md:gap-6 lg:gap-8;
    @apply grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4;
  }

  .adaptive-grid-dense {
    @apply grid gap-2 sm:gap-3 md:gap-4;
    @apply grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6;
  }

  .adaptive-grid-sparse {
    @apply grid gap-6 sm:gap-8 md:gap-10 lg:gap-12;
    @apply grid-cols-1 md:grid-cols-2 xl:grid-cols-3;
  }

  /* Responsive Flex Layouts */
  .adaptive-flex {
    @apply flex flex-col sm:flex-row gap-3 sm:gap-4 md:gap-6;
  }

  .adaptive-flex-center {
    @apply flex flex-col sm:flex-row gap-3 sm:gap-4 md:gap-6;
    @apply items-center justify-center;
  }

  .adaptive-flex-between {
    @apply flex flex-col sm:flex-row gap-3 sm:gap-4 md:gap-6;
    @apply items-start sm:items-center justify-between;
  }

  /* Tool-specific Layout Classes */
  .tool-layout {
    @apply transition-all duration-500;
    @apply mx-auto px-4 sm:px-6 lg:px-8;
  }

  .tool-layout-expanded {
    @apply max-w-7xl;
  }

  .tool-layout-focused {
    @apply max-w-xl;
  }

  .tool-grid-layout {
    @apply grid gap-6 sm:gap-8;
    @apply grid-cols-1 lg:grid-cols-3;
    @apply transition-all duration-500;
  }

  .tool-form-section {
    @apply lg:col-span-1;
  }

  .tool-results-section {
    @apply lg:col-span-2;
  }

  /* Spacing Density Variants */
  .density-compact {
    @apply space-y-2 sm:space-y-3;
  }

  .density-comfortable {
    @apply space-y-4 sm:space-y-6;
  }

  .density-spacious {
    @apply space-y-6 sm:space-y-8 md:space-y-10;
  }

  /* Enhanced Form Styling */
  .form-section {
    @apply space-y-3 sm:space-y-4;
  }

  .form-group {
    @apply space-y-1 sm:space-y-2;
  }

  .form-input-enhanced {
    @apply min-h-[44px] px-3 sm:px-4 py-2 sm:py-3;
    @apply text-sm sm:text-base;
    @apply transition-all duration-200;
  }

  .form-button-enhanced {
    @apply min-h-[48px] px-4 sm:px-6 py-3;
    @apply text-sm sm:text-base font-medium;
    @apply transition-all duration-200;
  }

  /* Navigation Enhancements */
  .nav-item-enhanced {
    @apply min-h-[44px] px-3 sm:px-4 py-2 sm:py-3;
    @apply flex items-center gap-2 sm:gap-3;
    @apply text-sm sm:text-base;
    @apply transition-all duration-200;
  }

  .nav-icon-enhanced {
    @apply h-4 w-4 sm:h-5 sm:w-5;
    @apply flex-shrink-0;
  }

  /* Content Density Responsive Classes */
  @media (max-width: 640px) {
    .mobile-dense {
      @apply space-y-2 gap-2 p-2;
    }
    
    .mobile-dense .adaptive-card {
      @apply p-3;
    }
  }

  @media (min-width: 641px) and (max-width: 1024px) {
    .tablet-comfortable {
      @apply space-y-4 gap-4 p-4;
    }
  }

  @media (min-width: 1025px) {
    .desktop-spacious {
      @apply space-y-6 gap-6 p-6;
    }
  }

  /* Mobile Touch and Form Enhancements */
  .mobile-button-enhanced {
    @apply min-h-[48px] min-w-[48px] px-4 py-3;
  }

  .mobile-link {
    @apply min-h-[44px] px-3 py-2 flex items-center;
  }

  .mobile-form-input {
    @apply min-h-[48px] px-4 py-3 text-base;
  }

  /* Card Consistency */
  .tool-card {
    @apply bg-card border border-border rounded-lg shadow-sm hover:shadow-md transition-all duration-200;
  }

  .status-card {
    @apply bg-card border rounded-lg p-4 space-y-3;
  }

  .metrics-card {
    @apply bg-card border rounded-lg p-6 space-y-4;
  }
}
